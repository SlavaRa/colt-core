<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<VBox minHeight="120" minWidth="540" xmlns="http://javafx.com/javafx/2.2">

    <padding>
        <Insets top="17" right="30" bottom="30" left="30"/>
    </padding>

    <stylesheets>
        <URL value="@codeOrchestra/colt/core/ui/style/main.css"/>
    </stylesheets>

    <AnchorPane>
        <ImageView fitHeight="48" fitWidth="48" preserveRatio="true" smooth="false" focusTraversable="true"
                   AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0">
            <Image url="@codeOrchestra/colt/core/ui/style/images/messages/warning-48x48.png"/>
        </ImageView>
        <Label text='Save changes to COLT "Untitled-1" project before closing?' styleClass="h1"
               AnchorPane.topAnchor="17" AnchorPane.leftAnchor="69" AnchorPane.rightAnchor="0"/>
    </AnchorPane>

    <AnchorPane>
        <Button text="Don't Save" focusTraversable="true" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="0"/>
        <Button text="Cancel" focusTraversable="true" prefWidth="67" AnchorPane.topAnchor="10"
                AnchorPane.rightAnchor="75"/>
        <Button text="Save" styleClass="btn-done" defaultButton="true" focusTraversable="true" prefWidth="67"
                AnchorPane.topAnchor="10" AnchorPane.rightAnchor="0"/>
    </AnchorPane>

</VBox>
