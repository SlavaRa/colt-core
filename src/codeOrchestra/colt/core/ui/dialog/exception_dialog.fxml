<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.VBox?>
<fx:root type="javafx.scene.layout.VBox" minHeight="120" minWidth="540" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2">
    <AnchorPane>
        <ImageView fx:id="imageView" fitHeight="48" fitWidth="48" preserveRatio="true" smooth="false" focusTraversable="true" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"/>
        <Label fx:id="label" styleClass="h1" AnchorPane.topAnchor="17" AnchorPane.leftAnchor="69" AnchorPane.rightAnchor="0" />
    </AnchorPane>

    <AnchorPane fx:id="details" VBox.vgrow="ALWAYS">
        <TextArea fx:id="textArea" minHeight="-1" prefHeight="240" prefWidth="0" wrapText="true"  AnchorPane.topAnchor="17" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" />
    </AnchorPane>

    <AnchorPane>
        <Button fx:id="details_btn" text="Hide details" styleClass="btn-hide-dialog" focusTraversable="false" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="0" />
        <Button fx:id="ok_btn" text="OK" defaultButton="true" focusTraversable="true" prefWidth="67" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="0" />
    </AnchorPane>
    <padding>
        <Insets top="17" right="30" bottom="30" left="30" />
    </padding>
</fx:root>