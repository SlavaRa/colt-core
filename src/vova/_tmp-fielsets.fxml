<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.paint.*?>

<ScrollPane prefHeight="760" prefWidth="500" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2">
<VBox>

<!-- First Fieldset -->
    <VBox fx:id="buildVB" styleClass="fieldset" maxWidth="640.0">
    <children>

        <Label text="Fieldset Label" styleClass="legend">
            <VBox.margin>
            <Insets bottom="-2" left="19" />
            </VBox.margin>
        </Label>

        <AnchorPane>
        <children>
            <Label layoutY="23" text="Output file name:" AnchorPane.leftAnchor="19" AnchorPane.rightAnchor="48" />
            <TextField fx:id="fileNameTF" layoutY="42" prefHeight="30" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="86" />
        </children>
        </AnchorPane>

        <AnchorPane>
        <children>
            <Label layoutY="23" text="Output path:" AnchorPane.leftAnchor="19" AnchorPane.rightAnchor="48" />
            <TextField fx:id="outPathTF" layoutY="42" prefHeight="30" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="86" />
            <Button focusTraversable="false" onAction="#outputPathBrowseHandler" layoutY="42.0" prefHeight="30" prefWidth="67" styleClass="button" text="Browse" AnchorPane.rightAnchor="10" />
        </children>
        </AnchorPane>

        <AnchorPane>
        <children>
            <ChoiceBox fx:id="playerVersionCB" layoutY="33" AnchorPane.leftAnchor="10">
            <String fx:value="15.1.1" />
            <String fx:value="/2" />
            <String fx:value="/3"/>
            <String fx:value="/4"/>
            </ChoiceBox>
            <Label fx:id="errorLabel" layoutY="41" AnchorPane.leftAnchor="115" AnchorPane.rightAnchor="10" text="Incorrect Flex SDK path specified" styleClass="error" />
        </children>
        </AnchorPane>

        <AnchorPane>
        <children>
            <CheckBox fx:id="rslCB" layoutY="31" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" text="Use Framework as Runtime Shared Library (RSL)" />
        </children>
        </AnchorPane>

        <AnchorPane>
        <children>
            <CheckBox fx:id="localeCB" text="Non-default locale settings:" layoutY="38" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" />
            <TextField fx:id="localeTF" layoutY="58" prefHeight="30" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="86" />
        </children>
        </AnchorPane>

    </children>

        <padding>
        <Insets top="26" bottom="23" />
        </padding>

    </VBox><!-- / First Fieldset -->

<!-- Second Fieldset -->
    <VBox styleClass="fieldset" maxWidth="640">
    <children>
        <AnchorPane>
        <children>
            <Label layoutY="23" text="Output file name:" AnchorPane.leftAnchor="19" AnchorPane.rightAnchor="48" />
            <TextField layoutY="42" prefHeight="30" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="86" />
        </children>
        </AnchorPane>

        <AnchorPane>
        <children>
            <Label layoutY="23" text="Output path:" AnchorPane.leftAnchor="19" AnchorPane.rightAnchor="48" />
            <TextField layoutY="42" prefHeight="30" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="86" />
            <Button focusTraversable="false" onAction="#outputPathBrowseHandler" layoutY="42" prefHeight="30" prefWidth="67" styleClass="button" text="Browse" AnchorPane.rightAnchor="10" />
        </children>
        </AnchorPane>

    </children>

        <padding>
        <Insets top="3" bottom="23" />
        </padding>

    </VBox><!-- / Second Fieldset -->

<!-- Third Fieldset -->
    <VBox styleClass="fieldset" maxWidth="640">
    <children>

        <Label text="Fieldset Label" styleClass="legend">
            <VBox.margin>
            <Insets bottom="-2" left="19" />
            </VBox.margin>
        </Label>

        <AnchorPane>
        <children>
            <Label layoutY="23" text="Output file name:" AnchorPane.leftAnchor="19" AnchorPane.rightAnchor="48" />
            <TextField layoutY="42" prefHeight="30" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="86" />
        </children>
        </AnchorPane>

        <AnchorPane>
        <children>
            <CheckBox fx:id="customConfCB" text="Use custom compiler configuration file" layoutY="22" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" />
            <TextField fx:id="customConfTF" layoutY="42" prefHeight="30" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="86" />
            <Button fx:id="customConfBtn" onAction="#customConfBrowseHandler" focusTraversable="false" layoutY="42" prefHeight="30" prefWidth="67" styleClass="button" text="Browse" AnchorPane.rightAnchor="10" />
        </children>
        </AnchorPane>

        <AnchorPane>
        <children>
            <RadioButton fx:id="defaultRBtn" text="System default application" toggleGroup="$launcher" layoutY="22" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" />
        </children>
        </AnchorPane>

        <AnchorPane>
        <children>
            <RadioButton fx:id="playerRBtn" text="Flash Player" toggleGroup="$launcher" layoutY="20" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" />
            <TextField fx:id="playerTF" layoutY="40" prefHeight="30" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="86" />
            <Button fx:id="browsBtn" onAction="#browseHandler" focusTraversable="false" layoutY="40" prefHeight="30" prefWidth="67" styleClass="button" text="Browse" AnchorPane.rightAnchor="10" />
        </children>
        </AnchorPane>

    </children>

        <padding>
        <Insets top="26" bottom="23" />
        </padding>

    </VBox><!-- / Third Fieldset -->
</VBox>

    <stylesheets>
        <URL value="@../codeOrchestra/colt/core/ui/style/main.css" />
    </stylesheets>

</ScrollPane>
